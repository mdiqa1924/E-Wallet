<div class="main-container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-5">
            <div class="border p-3 rounded bg-light">
                <form action="" method="post">

                    {{#if isNewUser}}
                    <div class="form-group">
                        <label for="pass">Password hiện tại</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                            <input name="currentpassword" type="password" class="form-control"
                                placeholder="Password hiện tại">
                        </div>
                    </div>
                    {{/if}}

                    <div class="form-group">
                        <label for="pass">Password mới</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                            <input name="password" type="password" class="form-control" placeholder="Password mới">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="pass">Xác nhận password</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                            <input name="r_password" type="password" class="form-control"
                                placeholder="Xác nhận password">
                        </div>
                    </div>



                    <div class="form-group">
                        <button class="btn btn-success px-5" type="submit">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>